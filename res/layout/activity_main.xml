<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />
	<Button 
	    android:id="@+id/record_start_button"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	    android:text="开始录音"/>
	<Button 
	    android:id="@+id/record_end_button"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	    android:text="结束录音"/>
	<Button 
	    android:id="@+id/record_play_button"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	    android:text="播放录音"/>
	<Button 
	    android:id="@+id/record_stop_button"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	    android:text="停止播放"/>
	<Button 
	    android:id="@+id/record_delete_button"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	    android:text="删除音频"/>
	<Button 
	    android:id="@+id/record_upload_button"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	    android:text="上传音频"/>
	<TextView 
	    android:text="现在的状态："
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"/>
	<TextView 
	    android:id="@+id/record_status_textview"
	    android:text="准备开始录音"
	    android:textSize="39sp"
	    android:textColor="#ff0000"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"/>
	<TextView 
	    android:id="@+id/record_test_textview"
	    android:textSize="39sp"
	    android:textColor="#00ff00"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"/>
</LinearLayout>
